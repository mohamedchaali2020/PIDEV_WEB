{% extends 'base.html.twig' %}

{% block title %}Coupon index{% endblock %}

{% block body %}
    <h1>Coupon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CouponId</th>
                <th>CouponKey</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coupon in coupons %}
            <tr>
                <td>{{ coupon.id }}</td>
                <td>{{ coupon.couponId }}</td>
                <td>{{ coupon.couponKey }}</td>
                <td>{{ coupon.value }}</td>
                <td>
                    <a href="{{ path('coupon_show', {'id': coupon.id}) }}">show</a>
                    <a href="{{ path('coupon_edit', {'id': coupon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('coupon_new') }}">Create new</a>
{% endblock %}
